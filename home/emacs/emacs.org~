  (menu-bar-mode -1)
  (tool-bar-mode -1)
  (scroll-bar-mode -1)
    (setopt frame-resize-pixelwise t)
  (pixel-scroll-precision-mode)
  (global-set-key [f12] 'eval-buffer)
  (org-support-shift-select t)
